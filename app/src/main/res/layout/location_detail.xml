<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/ten_dp"
    android:layout_marginEnd="@dimen/ten_dp"
    android:layout_height="match_parent"
    tools:context=".ui.LocationDetailFragment">

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close"
        android:tint="@color/icon"
        android:padding="@dimen/ten_dp"/>
    <ImageView
        android:id="@+id/icon_detail"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:tint="@color/icon"
        android:layout_marginBottom="@dimen/ten_dp"
        />

    <TextView
        android:id="@+id/name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_detail"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="The Marlowe" />

    <TextView
        android:id="@+id/address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:maxLines="2"
        android:textAlignment="center"
        tools:text="London Road, Bishop's Stortford CM23 3LU, United Kingdom" />


</RelativeLayout>