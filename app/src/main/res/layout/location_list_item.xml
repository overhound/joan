<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten_dp"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:tint="@color/icon"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:padding="@dimen/five_dp"
        android:textColor="@color/icon"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="The Cricketers" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/icon"
        android:paddingStart="@dimen/five_dp"
        android:paddingBottom="@dimen/five_dp"
        tools:text="London Road, Bishop's Stortford CM23 3LU, United Kingdom"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_toEndOf="@id/icon"
        android:paddingStart="@dimen/five_dp"
        android:paddingEnd="@dimen/five_dp"
        android:paddingBottom="@dimen/five_dp"
        android:textSize="12sp"
        android:id="@+id/place_type"
        android:textColor="@color/colorAccent"
        tools:text="School, Establishment" />
</RelativeLayout>
